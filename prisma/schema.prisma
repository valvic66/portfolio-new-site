datasource db {
  provider = "sqlite"
  url      = "file:./main.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int    @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  name        String?
  email       String    @unique
  password    String?    
  image       String?
  post       Post[]
}

model Post {
  id          Int    @id @default(autoincrement())
  userId      Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  title       String
  description String?
  imageUrl    String?
  category    String?
  User        User?      @relation(fields: [userId], references: [id])
}